---
// Astro component
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="es">
<head>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<style>
		body {
			font-family: 'Segoe UI', system-ui, sans-serif;
			background-color: #fff;
			color: #000;
			margin: 0;
			padding: 0;
			line-height: 1.6;
			letter-spacing: 0.2px;
		}

		main {
			max-width: 800px;
			margin: 3rem auto;
			padding: 0 1.5rem;
		}

		h3 {
			text-align: center;
			font-size: 2rem;
			margin-bottom: 2.5rem;
			padding-bottom: 0.5rem;
			border-bottom: 1px solid #000;
			font-weight: 600;
		}

		section {
			border: 1px solid #000;
			border-radius: 8px;
			background-color: #fafafa;
			padding: 1.5rem;
			margin-bottom: 2rem;
			transition: background-color 0.3s ease;
		}

		section:hover {
			background-color: #f0f0f0;
		}

		section p {
			font-size: 1.15rem;
			font-weight: 600;
			margin: 0 0 1rem;
			text-transform: uppercase;
			border-bottom: 1px solid #000;
			padding-bottom: 0.4rem;
		}

		ul {
			list-style: none;
			padding-left: 0;
			margin: 0;
		}

		li {
			margin-bottom: 0.6rem;
			font-size: 1rem;
		}

		strong {
			display: inline-block;
			width: 140px;
			font-weight: 600;
		}

		/* Opcional: Diferenciar visualmente éxito y fracaso */
		section.success p {
			border-left: 5px solid #000;
			padding-left: 0.5rem;
		}

		section.fail p {
			border-left: 5px solid #000;
			padding-left: 0.5rem;
			opacity: 0.85;
		}
	</style>
</head>
<body>
<Header />
<main>
	<h3>Informe de Proyectos Informáticos<br>(Junio 2024 – Junio 2025)</h3>

	<section class="fail">
		<p>Proyecto Fracasado — Nacional (Ecuador)</p>
		<ul>
			<li><strong>Nombre:</strong> Yachay – Ciudad del Conocimiento</li>
			<li><strong>Autores:</strong> Gobierno ecuatoriano</li>
			<li><strong>Descripción:</strong> Campus de alta tecnología en Imbabura con fines de investigación y desarrollo.</li>
			<li><strong>Motivos de fracaso:</strong> Corrupción, sueldos excesivos, resultados académicos pobres.</li>
			<li><strong>Costos:</strong> Inversión estatal millonaria sin retorno tangible.</li>
		</ul>
	</section>

	<section class="fail">
		<p>Proyecto Fracasado — Internacional</p>
		<ul>
			<li><strong>Nombre:</strong> Implementación ERP de Target Canadá</li>
			<li><strong>Autores:</strong> Target y SAP</li>
			<li><strong>Descripción:</strong> Sistema de gestión empresarial durante expansión canadiense.</li>
			<li><strong>Motivos de fracaso:</strong> Datos defectuosos, fallos en la cadena de suministro, salida del país.</li>
			<li><strong>Costos:</strong> Pérdidas multimillonarias.</li>
		</ul>
	</section>

	<section class="success">
		<p>Proyecto Exitoso — Nacional (Ecuador)</p>
		<ul>
			<li><strong>Nombre:</strong> Política de Inteligencia Artificial — Mintel</li>
			<li><strong>Autores:</strong> Ministerio de Telecomunicaciones y Sociedad de la Información</li>
			<li><strong>Descripción:</strong> Marco regulatorio para el uso ético de la IA en Ecuador.</li>
			<li><strong>Efectos:</strong> Fomento de computación en la nube, investigación y desarrollo en IA.</li>
			<li><strong>Costos:</strong> No especificados; inversión institucional en normativa y capacitación.</li>
		</ul>
	</section>

	<section class="success">
		<p>Proyecto Exitoso — Internacional</p>
		<ul>
			<li><strong>Nombre:</strong> SmartSantander</li>
			<li><strong>Autores:</strong> Universidad de Cantabria, EC, Generalitat Valenciana y otros.</li>
			<li><strong>Descripción:</strong> Plataforma IoT en ciudad inteligente, sensores urbanos para movilidad y ambiente.</li>
			<li><strong>Efectos:</strong> Investigación aplicada, soporte urbano, casos reales de uso de IoT.</li>
			<li><strong>Costos:</strong> Financiamiento europeo y nacional, costos millonarios.</li>
		</ul>
	</section>
</main>
<Footer />
</body>
</html>